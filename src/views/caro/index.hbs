<link rel="stylesheet" href="/css/caro.css">
<script src="/js/caro.js"></script>

<div class="min-h-screen bg-gradient-to-br from-blue-50 via-indigo-50 to-purple-50">
    <div class="container mx-auto px-4 py-6 max-w-7xl">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Caro Game</h1>
        </div>

        <div class="grid grid-cols-1 xl:grid-cols-4 gap-6">
            <!-- Game Board -->
            <div class="xl:col-span-3">
                <div class="card rounded-2xl p-6">
                    <div class="flex justify-center">
                        <div id="game-board" class="board-container">
                            <div id="board-grid" class="grid grid-cols-20">
                                <!-- Board cells will be generated by JavaScript -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Game Info Sidebar -->
            <div class="space-y-6">
                <!-- Player Status Component -->
                <div class="card rounded-2xl" id="player-status">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-3">
                            <div class="p-2 bg-blue-100 rounded-lg">
                                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                </svg>
                            </div>
                            Player Info
                        </h3>

                        <div id="player-info" class="space-y-4 hidden">
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <span class="text-gray-600 font-medium">You are:</span>
                                <span id="player-badge" class="px-3 py-1 rounded-full text-sm font-semibold"></span>
                            </div>

                            <div id="current-turn"
                                class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hidden">
                                <span class="text-gray-600 font-medium">Current turn:</span>
                                <span id="turn-badge"
                                    class="px-3 py-1 rounded-full text-sm font-semibold turn-indicator"></span>
                            </div>

                            <div id="game-result"
                                class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hidden">
                                <span class="text-gray-600 font-medium">Result:</span>
                                <span id="result-badge"
                                    class="px-3 py-1 rounded-full text-sm font-semibold flex items-center gap-2"></span>
                            </div>

                            <div id="rematch-status"
                                class="flex items-center justify-between p-3 bg-gray-50 rounded-lg hidden">
                                <span class="text-gray-600 font-medium">Rematch:</span>
                                <span id="rematch-badge"
                                    class="px-2 py-1 bg-orange-100 text-orange-800 rounded-full text-xs font-medium"></span>
                            </div>
                        </div>

                        <div id="not-connected" class="text-center py-8">
                            <div
                                class="w-16 h-16 mx-auto mb-4 bg-gray-100 rounded-full flex items-center justify-center">
                                <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M18.364 5.636l-12.728 12.728m0-12.728l12.728 12.728"></path>
                                </svg>
                            </div>
                            <p class="text-gray-500 font-medium">Not connected to game</p>
                        </div>
                    </div>
                </div>

                <!-- Game Controls Component -->
                <div class="card rounded-2xl" id="game-controls">
                    <div class="p-6">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center gap-3">
                            <div class="p-2 bg-green-100 rounded-lg">
                                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor"
                                    viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 100 4m0-4v2m0-6V4">
                                    </path>
                                </svg>
                            </div>
                            Controls
                        </h3>

                        <div class="space-y-4">
                            <div id="game-message" class="p-4 bg-blue-50 border border-blue-200 rounded-lg hidden">
                                <div class="flex items-start gap-3">
                                    <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none"
                                        stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <div class="alert-description text-blue-800 font-medium"></div>
                                </div>
                            </div>

                            <div id="rematch-section" class="hidden">
                                <div class="border-t border-gray-200 my-4"></div>
                                <div class="space-y-4">
                                    <button id="rematch-btn"
                                        class="btn w-full bg-blue-600 hover:bg-blue-700 text-white py-3 px-4 rounded-lg flex items-center justify-center gap-2 font-semibold">
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15">
                                            </path>
                                        </svg>
                                        <span id="rematch-btn-text">Request Rematch</span>
                                    </button>

                                    <div id="rematch-info" class="space-y-3 hidden">
                                        <div class="flex items-center justify-center gap-2 p-3 bg-orange-50 rounded-lg">
                                            <svg class="w-5 h-5 text-orange-500" fill="none" stroke="currentColor"
                                                viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                            </svg>
                                            <span id="rematch-count-badge"
                                                class="px-2 py-1 bg-orange-200 text-orange-800 rounded-full text-sm font-medium"></span>
                                        </div>
                                        <p id="rematch-message" class="text-sm text-gray-600 text-center font-medium">
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="border-t border-gray-200 pt-4">
                                <div class="flex items-center gap-3 text-sm">
                                    <div class="connection-indicator" id="connection-indicator">
                                        <svg id="connection-icon" class="w-5 h-5 text-gray-500" fill="none"
                                            stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0">
                                            </path>
                                        </svg>
                                    </div>
                                    <span id="connection-status"
                                        class="capitalize font-medium text-gray-600">disconnected</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>